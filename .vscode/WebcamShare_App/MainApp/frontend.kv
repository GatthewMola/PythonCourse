#:kivy !

<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            resolution: (640, 480)
            play: False 
        Button:
            id: camera_button
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            text: 'Capture Image'
            on_press: root.capture() # By using the root keyword on press, we are rooting the frontend displays to the correct methods.

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'